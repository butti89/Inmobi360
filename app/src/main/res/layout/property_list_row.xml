<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/property_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/property_image"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/no_image_layout"
        android:background="@color/iron"
        android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/no_images_in_house"
                android:id="@+id/no_image_text"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/property_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_image">

            <TextView
                android:id="@+id/property_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="8dp"
                tools:text="Great house"
                android:fontFamily="sans-serif"
                android:textColor="#333"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/property_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/property_title"
                android:maxLines="3"
                tools:text="344 Collins Street"
                android:textColor="#666"
                android:textSize="14sp"
                android:paddingTop="0dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"/>

            <ImageView
                android:id="@+id/property_details_img"
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@android:color/transparent"
                android:contentDescription="ver detalles"
                android:src="@drawable/ic_expand_more_24dp"
                android:layout_alignBottom="@+id/property_address"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/property_more_details"
                android:layout_below="@+id/property_address"
                android:visibility="gone"
                tools:visibility="visible"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/property_details_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción: %1$s"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/property_details_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Provincia: %1$s"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/property_details_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Localidad: %1$s"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/property_details_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo: %1$s"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/property_details_rooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ambientes: %1$s"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/property_details_meters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metros cuadrados: %1$s"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/property_details_garage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cochera: %1$s"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/property_details_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Antiguedad: %1$s"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/property_details_operation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Operación: %1$s"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/property_details_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio: $%1$s"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:layout_alignParentStart="true"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
